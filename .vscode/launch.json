{
    "version": "0.2.0",
       "configurations": [
       {
          "name": "C++ gdbserver",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceRoot}/build/WiserHomeLinux",
          "preLaunchTask": "gdbserver",
          "linux": {
             "miDebuggerPath": "/usr/bin/gdb-multiarch",
             "setupCommands": [
             {"text": "handle SIGILL pass nostop noprint"},
             {"text": "set sysroot /opt/armv7l-linux-musleabihf-cross/armv7l-linux-musleabihf"}
             ]
          },
          "windows": {
             "miDebuggerPath": "${env:LOCALAPPDATA}/GCC_ARM/armv7l-linux-musleabihf-cross/bin/armv7l-linux-musleabihf-gdb.exe",
             "setupCommands": [
             {"text": "handle SIGILL pass nostop noprint"},
             {"text": "set sysroot ${env:LOCALAPPDATA}\\GCC_ARM\\armv7l-linux-musleabihf-cross\\armv7l-linux-musleabihf"}
             ]
          },
          "miDebuggerServerAddress": "standardhub:2159",
          "cwd": "${workspaceRoot}",
          "externalConsole": true
       }
    ]
 }
   "version": "0.2.1",
   "configurations": [
       {
           "name": "Launch on Std Hub (gdbserver)",
           "type": "cppdbg",
           "program": "${command:cmake.launchTargetPath}",
           "request": "launch",
           "args": [],
           "stopAtEntry": false,
           "cwd": "${workspaceFolder}",
           "environment": [
               {
                   // add the directory where our target was built to the PATHs
                   // it gets resolved by CMake Tools:
                   "name": "PATH",
                   "value": "$PATH:${command:cmake.launchTargetDirectory}"
               }
           ],
           "externalConsole": false,
           "MIMode": "gdb",
           "linux" : {
               "miDebuggerPath": "/usr/bin/gdb-multiarch",
           },
           "setupCommands": [
               { "text": "-enable-pretty-printing", "ignoreFailures": true, "description": "Enable pretty-printing for gdb" },
               { "text": "-target-select extended-remote 192.168.1.111:2159", "ignoreFailures": false, "description": "Connect to the target" },
               { "text": "-target-file-put ${command:cmake.launchTargetPath} target-binary", "ignoreFailures": false, "description": "Upload target binary" },
               //{ "text": "-file-exec-and-symbols ${command:cmake.launchTargetPath}",  "ignoreFailures": false, "description": "Set up symbols & executable" },
               { "text": "-interpreter-exec console \"set remote exec-file target-binary\"", "ignoreFailures": false, "description": "Select remote binary"},
           ],
       }
   ]
}